{
  "name": "hardhat-deal",
  "version": "1.0.0",
  "description": "Hardhat TypeScript plugin boilerplate",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rubilmax/hardhat-deal.git"
  },
  "license": "MIT",
  "author": {
    "name": "Romain (Rubilmax) Milon",
    "email": "rmilon@gmail.com",
    "url": "https://github.com/rubilmax"
  },
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "test",
    "helper",
    "erc20"
  ],
  "scripts": {
    "build": "tsc --build ./tsconfig.build.json",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "bugs": {
    "url": "https://github.com/rubilmax/hardhat-deal/issues"
  },
  "homepage": "https://github.com/rubilmax/hardhat-deal#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.2",
    "chai": "^4.3.7",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "ethers": "^6.6.4",
    "hardhat": "^2.17.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "mocha": "^10.2.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "ethers": "^6.0.0",
    "hardhat": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "prettier"
  },
  "release": {
    "branches": [
      "master",
      "next"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
